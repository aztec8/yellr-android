<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="yellr.net.yellr_android.activities.ProfileActivity$PlaceholderFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frag_profile_user_image"
        android:text="@string/fa_user"
        android:textSize="48dp"
        android:textColor="@color/black"
        android:background="@color/dark_yellow"
        android:gravity="center"
        android:padding="16dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Anonymous"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:id="@+id/frag_profile_name"
        android:layout_toRightOf="@id/frag_profile_user_image"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frag_profile_name"
        android:layout_toRightOf="@id/frag_profile_user_image"
        android:layout_alignBottom="@id/frag_profile_user_image"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/frag_profile_verified_logo"
            android:gravity="right|center_vertical"
            android:layout_weight="1"
            android:text="@string/fa_times"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/frag_profile_verified"
            android:gravity="left|center_vertical"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:text="Un-Verified"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:textColor="@color/grey"
        android:id="@+id/frag_profile_id"
        android:layout_below="@+id/frag_profile_user_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:padding="16dp" />

</RelativeLayout>
