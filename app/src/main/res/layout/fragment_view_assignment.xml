    <TextView
        android:id="@+id/frag_view_assignment_question"
        android:text="Loading assignment ..."
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/frag_view_assignment_description"
        android:text=""
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/frag_view_assignment_question"/>

    <Button
        android:id="@+id/frag_view_assignment_contribute_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_assignment_contribute"
        android:textSize="18dp"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:onClick="launchContributeToAssignment"
        android:layout_below="@id/frag_view_assignment_description"/>

